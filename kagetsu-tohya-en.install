post_install() {
  echo "To complete installation, run /usr/share/kagetsu-tohya-en/install.sh as root. This extracts files from the game disc."
  echo "Walkthrough and readme.txt were placed at /usr/share/doc/kagetsu-tohya-en."
}

pre_remove() {
  rm -r /usr/share/kagetsu-tohya-en >& /dev/null
}

